{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}
{% form_theme registerForm 'bootstrap_4_layout.html.twig' %}
{% block main %}
    <div class="container">
        <div class="col-lg-4">
            <div class="photo">
                {% if is_granted("ROLE_USER") %}
                    {% if user.photo == null %}
                        {{ asset('img/photoProfil/profil.jpg') }}
                    {% else %}
                        <img src="{{ asset('img/photoProfil/') }}{{photo}}" alt="Photo profil">
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
    <div class="container">
        <div class="register">
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <div class="form-label">
                            {{ form_start(registerForm) }}
                            {{ form_widget(registerForm) }}
{#                            {{ form_row(registerForm.photo) }}#}
                            <br>
                            <button class="btn btn-primary" type="submit">Enregistrer</button>
                            <button class="btn btn-dark" type="reset">Annuler</button>
                            {{ form_end(registerForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}