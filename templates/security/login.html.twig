{% extends 'layout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
<div class="container">
    <div class="login">
        <div class="row">
            <div class="col-12">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                    <label for="inputEmail">Identifiant</label>
                    <input type="string" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <br>
                    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>

                    {#        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.#}
                    {#        See https://symfony.com/doc/current/security/remember_me.html#}

                    <input type="checkbox" name="_remember_me"> Remember me
                    <br>
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>


                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
